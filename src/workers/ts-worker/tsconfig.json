{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "isolatedModules": false,
    "incremental": false,
    "jsx": "react",
    "plugins": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Viktiga tillägg:
    "target": "ES2020",         // Använd en nyare JavaScript-version
    "lib": ["ES2020"],          // Inkludera ES2020-bibliotek
    "esModuleInterop": true,    // Förbättrad modul-interoperabilitet
    "resolveJsonModule": true   // Tillåt import av JSON-filer
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}